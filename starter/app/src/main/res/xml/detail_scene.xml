<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetStart="@+id/start"
        app:constraintSetEnd="@+id/end"
        app:duration="1500"
        app:autoTransition="animateToEnd">

        <KeyFrameSet>
            <KeyAttribute
                app:framePosition="0"
                app:motionTarget="@id/file_row"
                android:alpha="0"
                android:translationY="80dp"/>

            <KeyAttribute
                app:framePosition="50"
                app:motionTarget="@id/file_row"
                android:alpha="1"
                android:translationY="0dp"/>
            <KeyAttribute
                app:framePosition="0"
                app:motionTarget="@id/status_row"
                android:alpha="0"
                android:translationY="80dp"/>

            <KeyAttribute
                app:framePosition="50"
                app:motionTarget="@id/status_row"
                android:alpha="1"
                android:translationY="0dp"/>

            <KeyAttribute
                app:framePosition="20"
                app:motionTarget="@id/ok_button"
                android:alpha="0"
                android:translationY="80dp"/>

            <KeyAttribute
                app:framePosition="70"
                app:motionTarget="@id/ok_button"
                android:alpha="1"
                android:translationY="0dp"/>
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@id/file_row"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint android:id="@id/filename_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Constraint android:id="@id/filename_text"
            android:layout_width="0dp"
            android:paddingStart="8dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <Constraint android:id="@id/status_row"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/file_row"
            android:alpha="0"
            android:translationY="40dp" />

        <Constraint android:id="@id/status_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:translationY="40dp" />

        <Constraint android:id="@id/status_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="8dp"
            android:alpha="0"
            android:translationY="40dp" />

        <Constraint android:id="@id/ok_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:alpha="0"
            android:translationY="40dp" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint android:id="@id/file_row"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:alpha="1"
            android:translationY="0dp" />

        <Constraint android:id="@id/filename_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1"
            android:translationY="0dp" />

        <Constraint android:id="@id/filename_text"
            android:layout_width="0dp"
            android:paddingStart="8dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:alpha="1"
            android:translationY="0dp" />

        <Constraint android:id="@id/status_row"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/file_row"
            android:alpha="1"
            android:translationY="0dp" />

        <Constraint android:id="@id/status_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1"
            android:translationY="0dp" />

        <Constraint android:id="@id/status_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="8dp"
            android:alpha="1"
            android:translationY="0dp" />

        <Constraint android:id="@id/ok_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:alpha="1"
            android:translationY="0dp" />
    </ConstraintSet>

</MotionScene>